{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "svelte", "node"],
    "moduleResolution": "node",
    "module": "ES6",
    "esModuleInterop": true,
    "target": "ES6",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.svelte", "declaration.d.ts"]
}
